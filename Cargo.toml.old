[package]
name = "kimichat"
version = "0.1.0"
edition = "2021"

[dependencies]
tokio = { version = "1.41", features = ["full"] }
tokio-util = "0.7"
reqwest = { version = "0.12", features = ["json", "stream"] }
futures-util = "0.3"
futures = "0.3"
async-stream = "0.3"
serde = { version = "1.0", features = ["derive"] }
serde_json = "1.0"
toml = "0.8"
anyhow = "1.0"
colored = "2.1"
rustyline = "14.0"
glob = "0.3"
ignore = "0.4"
dotenvy = "0.15"
regex = "*"
chrono = { version = "0.4.42", features = ["serde"] }
thiserror = "1.0"
clap = { version = "4.5", features = ["derive", "env"] }
clap_complete = "4.5"
similar = { version = "2.6", features = ["inline"] }
async-trait = "0.1"
uuid = { version = "1.0", features = ["v4", "serde"] }

# Web server support
axum = { version = "0.7", features = ["ws", "macros"] }
tower = "0.4"
tower-http = { version = "0.5", features = ["fs", "cors", "trace"] }

# Terminal/PTY support
portable-pty = "0.8"
vt100 = "0.15"

[target.'cfg(unix)'.dependencies]
libc = "0.2"

# Optional embedding support for semantic skill search
fastembed = { version = "5", optional = true }

[features]
# Default features include embeddings for better skill matching
default = ["embeddings"]

# Semantic embeddings for skill search (using fastembed)
embeddings = ["fastembed"]

# Future: Alternative embedding backend using candle
# candle-embeddings = ["candle-core", "candle-transformers"]
